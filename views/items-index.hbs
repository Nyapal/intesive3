<div>
</div>
<div class="row">
  <div class="col-md-6">
    {{#each items}}
      <h2><a href="/items/{{this._id}}">{{this.name}}</a></h2>
      <p>
        <small>{{this.desc}}</small>
      </p>
    {{/each}}
  </div>
  <div class="col-md-6">
    {{#if currentUser}} 
    <div class="col-md-6">
      <div id="contentWrap" style="position:fixed; top:20px; margin-top: 75px">
        <div id="chatWrap" style='float:left; border: 1px solid black'>
          <div id="chat" style="height: 300px"></div>
          <form id="send-message">
            <input size="35" id="message"></input>
            <button type="submit" class="btn btn-light"> Send Message: </button>
          </form>
        </div>
      </div>
    </div>
  {{/if}}
  </div>
</div>